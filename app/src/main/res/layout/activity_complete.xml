<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_complete"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.fubang.wanghong.ui.CompleteActivity">
    <RelativeLayout
        android:background="@color/bottom_radio_checked_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recharge_reheight">
        <ImageView
            android:id="@+id/complete_back_btn"
            android:layout_centerVertical="true"
            android:src="@mipmap/lookleft_icon"
            android:layout_width="@dimen/recharge_image_width"
            android:layout_height="@dimen/recharge_image_width" />
        <TextView
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/complete_recharge"
            android:textColor="@color/home_tab_backgroud"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recharge_tvheight" />
        <TextView
            android:id="@+id/complete_ok"
            android:textColor="@color/home_tab_backgroud"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="20sp"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:background="@color/my_center_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        />
    <ImageView
        android:layout_gravity="center"
        android:src="@mipmap/recharge_complete"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <TextView
        android:text="支付成功"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="#099752"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/complete_money"
        android:layout_margin="20dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="￥10.00元"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/complete_btn"
        android:layout_margin="10dp"
        android:background="#13d677"
        android:text="完成"
        android:textSize="20sp"
        android:textColor="@color/home_tab_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
