<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fubang.wanghong.ui.PrivilegeActivity">
    <RelativeLayout
        android:background="@color/bottom_radio_checked_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/privilege_reheight">
        <ImageView
            android:id="@+id/privilege_back_btn"
            android:layout_margin="@dimen/privilege_image_margin"
            android:layout_centerVertical="true"
            android:src="@mipmap/lookleft_icon"
            android:layout_width="@dimen/privilege_image_width"
            android:layout_height="20dp" />
        <TextView
            android:gravity="center"
            android:textSize="@dimen/privilege_tv"
            android:text="@string/privilege_center"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/privilege_tv_height" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:background="@color/home_tab_backgroud"
        android:id="@+id/privilege_tablayout"
        app:tabTextColor="@android:color/black"
        app:tabIndicatorColor="@color/bottom_radio_checked_text"
        app:tabSelectedTextColor="@color/bottom_radio_checked_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <android.support.v4.view.ViewPager
        android:background="@color/home_tab_backgroud"
        android:id="@+id/privilege_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
