<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fubang.wanghong.ui.SearchActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/head_bg_color"
        >
        <ImageView
            android:id="@+id/search_back_btn"
            android:layout_margin="@dimen/search_image_margin"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_title_black_back"
            android:layout_width="@dimen/search_image_width"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/search_card_radius"
            android:layout_width="0dp"
            app:cardBackgroundColor="#f1abe1"
            android:layout_weight="1"
            android:layout_height="30dp">
            <LinearLayout
                android:background="#f1abe1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/search_icon"
                    android:layout_width="22dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/search_edittext"
                    android:queryHint="请输入房间id"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/search_edit_clear"
                    android:src="@mipmap/del"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/search_to_search"
            android:textSize="18sp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/home_tab_backgroud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_find"/>
    </LinearLayout>
    <ListView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>

