<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/home_tab_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.fubang.wanghong.fragment.MyFragment">
    <LinearLayout
        android:background="@mipmap/enter_bj"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="250dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/search_icon"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/person_center"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </RelativeLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            app:placeholderImage="@mipmap/my_photo_icon"
            android:id="@+id/my_user_headicon"
            android:layout_width="80dp"
            app:roundAsCircle="true"
            android:layout_gravity="center"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/my_username"
            android:text="@string/username"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="26dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/y_icon"
                android:layout_height="26dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="0 K币"
                android:id="@+id/my_kbi_tv"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="26dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/vip_icons"
                android:layout_height="26dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="VIP 0"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:id="@+id/my_follolw_number"
                android:text="0"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="关注"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="0"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="粉丝"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="0"
                android:id="@+id/my_frag_history_number"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="历史观看"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#d2d2d2"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/my_message"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/news_icon"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/message"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/lookright_icon"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8cc"/>
        <LinearLayout
            android:id="@+id/my_privileges"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/vip_icon"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/privilege"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/lookright_icon"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8cc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/my_recharge"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/news_icon"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/recharge"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/lookright_icon"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8cc"/>
        <LinearLayout
            android:id="@+id/my_service"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/sevice_icon"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/my_service"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/lookright_icon"/>
        </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c8c8cc"/>

        <LinearLayout
            android:id="@+id/my_setting"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/setup_icon"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/setting"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/lookright_icon"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8cc"/>
    </LinearLayout>

</LinearLayout>
