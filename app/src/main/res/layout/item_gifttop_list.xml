<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
android:gravity="center"
android:layout_width="match_parent"
android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="30dp"
    android:layout_height="match_parent">
    <ImageView
        android:visibility="visible"
        android:id="@+id/gifttop_number_image"
        android:src="@mipmap/gold_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:visibility="gone"
        android:text="1"
        android:textColor="@color/my_text_center"
        android:id="@+id/billboard_gifttop_number"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
    <TextView
        android:text="10009"
        android:textColor="@color/home_room_text"
        android:id="@+id/billboard_user_name"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
<com.facebook.drawee.view.SimpleDraweeView
    android:layout_width="35dp"
    app:placeholderImage="@mipmap/my_photo_icon"
    android:id="@+id/gifttop_list_headicon"
    app:roundAsCircle="true"
    android:layout_height="35dp" />
<TextView
    android:text="10009"
    android:textColor="@color/room_message_color"
    android:id="@+id/billboard_gifttop_name"
    android:layout_marginLeft="5dp"
    android:textSize="18sp"
    android:layout_width="0dp"
    android:gravity="center"
    android:layout_weight="1"
    android:layout_height="wrap_content" />
<TextView
    android:text="115"
    android:textSize="18sp"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:id="@+id/billboard_gifttop_value"
    android:layout_height="wrap_content" />

</LinearLayout>