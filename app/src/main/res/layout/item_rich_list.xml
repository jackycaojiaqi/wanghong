<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="match_parent">
        <ImageView
            android:visibility="visible"
            android:id="@+id/rich_number_image"
            android:src="@mipmap/gold_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:text="1"
            android:textColor="@color/my_text_center"
            android:id="@+id/billboard_rich_number"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
    </RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="35dp"
        app:placeholderImage="@mipmap/my_photo_icon"
        android:id="@+id/rich_list_headicon"
        app:roundAsCircle="true"
        android:layout_height="35dp" />
    <TextView
        android:text="10009"
        android:textColor="@color/room_message_color"
        android:id="@+id/billboard_rich_name"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:text="1154844848"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:id="@+id/billboard_rich_value"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="30dp"
        android:gravity="center"
        android:src="@mipmap/hsy_talent_icon"
        android:id="@+id/billboard_rich_liker"
        android:layout_height="30dp" />
</LinearLayout>