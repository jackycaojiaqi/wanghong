<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="match_parent">
        <ImageView
            android:visibility="visible"
            android:id="@+id/roomsum_number_image"
            android:src="@mipmap/gold_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/my_text_center"
            android:id="@+id/billboard_roomsum_number"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <TextView
        android:text="10009"
        android:textColor="@color/room_message_color"
        android:id="@+id/billboard_roomsum_id"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <TextView
        android:text="10009"
        android:textColor="@color/room_message_color"
        android:id="@+id/billboard_roomsum_name"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:text="115"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/billboard_roomsum_value"
        android:layout_height="wrap_content" />

</LinearLayout>