<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:background="@color/chat_input_backgd"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_chat_input">
    <ImageButton
        android:id="@+id/chat_image_btn"
        android:src="@mipmap/room_face_icon"
        android:background="@color/chat_input_backgd"
        android:layout_width="30dp"
        android:layout_margin="6dp"
        android:scaleType="fitXY"
        android:layout_height="30dp" />

<RelativeLayout
    android:layout_weight="1"
    android:layout_gravity="center"
    android:layout_width="0dp"
    android:layout_height="30dp">

    <View
        android:id="@+id/view"
        android:focusable ="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background = "#fffef9"
        />
    <com.fubang.wanghong.view.MyEditText
        android:id="@+id/room_chat_edittext"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background = "#00000000"
    />

</RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_width="60dp"
        android:layout_height="35dp">
        <Button
            android:id="@+id/room_chat_send"
            android:text="@string/chat_send"
            android:background="@color/home_tab_backgroud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/room_gift"
        android:src="@mipmap/liwu"
        android:layout_margin="5dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <!--<ImageView-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@mipmap/hongbao"-->
        <!--android:layout_margin="5dp"-->
        <!--android:layout_width="32dp"-->
        <!--android:layout_height="32dp" />-->
</LinearLayout>